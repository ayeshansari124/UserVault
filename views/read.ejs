<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>User List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="relative min-h-screen bg-cover bg-center bg-no-repeat" 
      style="background-image: url('https://images.unsplash.com/photo-1506765515384-028b60a970df?auto=format&fit=crop&w=1920&q=80');">

  <!-- Background Overlay -->
  <div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>

  <!-- Fixed Back Button -->
  <a href="/" 
     class="absolute top-6 left-6 z-20 px-5 py-2 bg-indigo-600/70 hover:bg-indigo-700/90 text-white font-medium rounded-full shadow-md 
            backdrop-blur-md border border-white/30 transition-all duration-300">
    ⬅
  </a>

  <!-- Main Content -->
  <div class="relative z-10 flex flex-col items-center justify-center min-h-screen p-8 space-y-10">

    <!-- Title -->
    <h1 class="text-3xl sm:text-4xl font-bold text-white text-center drop-shadow-lg">
      All Registered Users
    </h1>

    <% if (users.length > 0) { %>
      <!-- User Cards Grid -->
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 w-full max-w-7xl">
        <% users.forEach(user => { %>
          <div class="bg-white/20 backdrop-blur-md rounded-2xl shadow-2xl p-6 flex flex-col items-center text-center border border-white/30 
                      transition-all duration-300 hover:scale-105 hover:shadow-[0_8px_25px_rgba(0,0,0,0.4)] hover:bg-white/30">

            <!-- Profile Image -->
            <img 
              src="<%= user.image %>" 
              alt="<%= user.name %>" 
              class="w-28 h-28 rounded-full object-cover mb-4 border-4 border-indigo-300/40 shadow-md"
            />

            <!-- User Info -->
            <h2 class="text-lg font-semibold text-white mb-1 truncate w-full"><%= user.name %></h2>
            <p class="text-gray-200 text-sm mb-4 truncate w-full"><%= user.email %></p>

            <!-- Action Buttons -->
            <div class="flex gap-4 mt-auto">
              <a href="/edit/<%= user._id %>" 
                 class="px-4 py-2 text-sm font-medium bg-blue-600 hover:bg-blue-700 text-white rounded-lg shadow transition-all">
                Edit
              </a>
              <a href="/delete/<%= user._id %>" 
                 class="px-4 py-2 text-sm font-medium bg-red-500 hover:bg-red-600 text-white rounded-lg shadow transition-all">
                Delete
              </a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } else { %>
      <!-- No Users Found Message -->
      <div class="flex flex-col items-center justify-center text-center text-white space-y-4">
        <h2 class="text-2xl font-semibold drop-shadow-lg">No users yet</h2>
        <p class="text-gray-300">Be the first to register a new user.</p>
        <a href="/" 
           class="mt-4 px-6 py-2 bg-indigo-600 hover:bg-indigo-700 rounded-lg shadow-md transition-all text-white font-medium">
          ➕ Create User
        </a>
      </div>
    <% } %>
  </div>
</body>
</html>
