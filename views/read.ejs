<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Document</title>
</head>
<body>
    
  <!-- User Cards -->
<div class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-6 gap-2 p-6 bg-gray-100 min-h-screen">
  <% users.forEach(user => { %>
    <div class="bg-white shadow-md rounded-xl p-5 flex flex-col items-center transition-transform transform hover:scale-105 hover:shadow-xl w-56 h-64 mx-auto">
      <img src="<%= user.image %>" alt="<%= user.name %>" class="w-20 h-20 rounded-full object-cover mb-3 border-2 border-indigo-400/40" />
      <h2 class="text-base font-semibold text-gray-800 mb-1 text-center truncate w-full"><%= user.name %></h2>
      <p class="text-gray-600 text-sm mb-3 text-center truncate w-full"><%= user.email %></p>

      <div class="flex gap-3 mt-auto">
        <a href="/edit/<%= user._id %>" class="px-3 py-1.5 text-sm bg-blue-500 text-white rounded-md hover:bg-blue-600 transition-colors">Edit</a>
        <a href="/delete/<%= user._id %>" class="px-3 py-1.5 text-sm bg-red-500 text-white rounded-md hover:bg-red-600 transition-colors">Delete</a>
      </div>
    </div>
  <% }) %>
</div>



</body>
</html>